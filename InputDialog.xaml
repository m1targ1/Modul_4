<Window x:Class="Modul_4.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите данные" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="PromptTextBlock" Text="Введите данные:" Margin="0,0,0,10"/>
            <TextBox x:Name="InputTextBox" Width="260" Height="30"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="ОК" Width="80" Click="OkButton_Click"/>
                <Button Content="Отмена" Width="80" Margin="10,0,0,0" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

